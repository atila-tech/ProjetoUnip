
@{
    ViewBag.Title = "Medico";
}

@*<h2>Cadastro de médicos</h2>*@

<div class="page-header">
    <div class="pull-right">
        @*@{Html.RenderPartial(Url.Content("~/Views/Partials/Loading.cshtml"));}*@
    </div>
    <br>
    <h4>Cadastro de médicos</h4>
</div>
<br>
<div class="row" style="margin-bottom: 1%;">
    <div class="col-lg-4">
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group btn-group-justified btn-group-sm">
                <a id="btnNovo" class="btn btn-primary" onclick="openCadMedico('@Url.Action("FormMedico", "Administrador", new { Area = "Funcionario" })');"><span class="glyphicon glyphicon-inbox"></span>&nbsp;Novo</a>
